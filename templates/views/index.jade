extends ../layouts/default

block content
	.container: .row
		if categories
			each category in categories
				.col-md-6
					h3= category.name
					if posts[category.id]
						ul.list-unstyled
							each post in posts[category.id]
								li: h4: a(href='/post?id=#{post.id}', target='_blank')= post.title

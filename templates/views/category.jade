extends ../layouts/default
include ../mixins/breadcrumb
include ../mixins/pagination

block content
	.container
		+breadcrumb()
		.container
			if posts
				each post in posts.results
					h4.row
						.col-lg-10: a(href='/post?id=#{post.id}', target='_blank')= post.title
						.col-lg-2= post._.publishedAt.format('YYYY-MM-DD')
				+pagination(posts.pages, baseUrl, posts.currentPage, posts.previous, posts.next)
